<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbg"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".AdminActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-116dp"
        tools:layout_editor_absoluteY="49dp">

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aback"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:text=""
                android:textSize="34sp" />

            <TextView
                android:id="@+id/vuser"
                android:layout_width="269dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/roundedbdwh"
                android:text="View as User"
                android:textAlignment="center"
                android:textColor="#32392A"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR Add"
                android:textAlignment="center"
                android:textColor="#EDEDED"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/adNola"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedbdwh"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/Upload_Not_act"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/circle_green"
                            android:padding="20dp"
                            android:src="@drawable/baseline_event_note_24" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="#D3D3D3" />

                        <TextView
                            android:id="@+id/Upload_Not_"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Upload Notice"
                            android:textAlignment="center"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/adStula"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedbdwh"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/StuActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="17dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/circle_pink"
                            android:padding="20dp"
                            android:src="@drawable/student1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="#D3D3D3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Update Student"
                            android:textAlignment="center"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/adOffla"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedbdwh"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/textView13"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/circle_purple"
                            android:padding="20dp"
                            android:src="@drawable/officer1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="#D3D3D3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Update in Office"
                            android:textAlignment="center"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/adAula"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedbdwh"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/textView1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/circle_yellow"
                            android:padding="20dp"
                            android:src="@drawable/authority1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/lightGray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Update in Authority"
                            android:textAlignment="center"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/delNola"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/roundedbdwh"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/textView15"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/circle_red"
                            android:padding="20dp"
                            android:src="@drawable/ic_delete" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@color/lightGray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="62dp"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:text="Delete Notice"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>